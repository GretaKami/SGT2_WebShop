@model UserSignUpModel

<form class="col-6" asp-controller="User" asp-action="SignUp" method="post">
  <div class="mb-3">
    <label asp-for="Name" class="form-label">Name</label>
    <input asp-for="Name" type="text" class="form-control" >
    @Html.ValidationMessageFor(u=> u.Name)
  </div>
  <div class="mb-3">
    <label asp-for="Surname" class="form-label">Surname</label>
    <input asp-for="Surname" type="text" class="form-control" >
    @Html.ValidationMessageFor(u=> u.Surname)
  </div>
    <div class="mb-3">
    <label asp-for="Email" class="form-label">Email</label>
    <input asp-for="Email" type="email" class="form-control" >
    @Html.ValidationMessageFor(u=> u.Email)
  </div>
  <div class="mb-3">
    <label asp-for="Username" class="form-label">Username</label>
    <input asp-for="Username" type="text" class="form-control" >
    @Html.ValidationMessageFor(u=> u.Username)
  </div>
    <div class="mb-3">
    <label asp-for="Password" class="form-label">Password</label>
    <input asp-for="Password" type="password" class="form-control" >
    @Html.ValidationMessageFor(u=> u.Password)
  </div>
  <div class="mb-3">
    <label asp-for="RepeatPassword" class="form-label">Repeat password</label>
    <input asp-for="RepeatPassword" type="password" class="form-control" >
    @Html.ValidationMessageFor(u=> u.RepeatPassword)
  </div>
   
 
  <button type="submit" class="btn btn-primary">Submit</button>
</form>