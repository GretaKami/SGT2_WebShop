@model CartModel
<style>
    img{
        width: auto;
        height: 70%;
    }   
</style>

<table class="table">
    <tr>
        <th class="col-2">Photo</th>
        <th>Product name</th>
        <th>Price per unit</th>
        <th>Quantity</th>
        <th>Price</th>
    </tr>
    @foreach(var item in Model.Items)
    {
        <tr>
            <td class="col-2">
                <div class="thumbnail">
                    @if(item.Product.ImageName != null)
                    {
                        <img class ="img-thumbnail" 
                             src="@(System.IO.Path.Combine("Photos", item.Product.ImageName))" 
                             alt="..."
                        >
                    }
                    else
                    {
                        <img class ="img-thumbnail" src="data:image/svg+xml;base64," alt="...">
                    }
                </div>
            </td>
            <td>@item.Product.Name</td>
            <td>@item.Product.Price</td>
            <td>@item.Quantity</td>
            <td>@item.TotalPrice</td>
        </tr>
    }
</table>
<div style="text-align: right">
<h8>Total sum: @Model.TotalSum €</h8>
</div>
<br />
<div style="text-align: right">
    <form asp-controller="Order" asp-action="OrderConfirmation" method="post">
         <button type="submit" class="btn btn-primary">Confirm order</button>
    </form>
</div>
